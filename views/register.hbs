<form class="form-signin" method="post">
     

{{#each errorMessages}}
<div class="alert alert-danger">
  {{this.msg}}
</div>
{{/each}}

    <h2 class="form-signin-heading text-center">Create New Account</h2>
<br/>

<input type="text" name="name" class="form-control" placeholder="Name" require="" autofocus="">
<br/>
<input type="email" name="email" class="form-control" placeholder="Email" require="" >
<br/>
<input type="password" name="password" class="form-control" placeholder="Pssword" require="" >
<br/>
<input type="password" name="confirmPassword" class="form-control" placeholder="Confirm Password" require="" >
<br/>
<button type="submit" class="btn btn-lg btn-primary btn-block">Sign-Up</button>

</form>
